<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".src.main.mainHome.ProfileActivity">
    <LinearLayout
        android:id="@+id/profile_top_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_homeBack_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrow_back_btn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:text="내정보변경"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/profile_submit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_top_wrapper">

        <TextView
            android:id="@+id/profile_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:lineHeight="37.5sp"
            android:paddingLeft="8dp"
            android:text="자신의 프로필\n캐릭터를 만들어봐요!"
            android:textColor="#111"
            android:textFontWeight="500"
            android:textSize="32sp" />

        <LinearLayout
            android:id="@+id/profile_name_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_nameInput"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_marginRight="21dp"
                android:lineHeight="23.44dp"
                android:text="차라나"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/profile_change_btn"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_tag_background"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="닉네임 변경"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="233dp"
            android:layout_height="233dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="110dp"
            android:src="@drawable/group_72" />
    </LinearLayout>

    <TextView
        android:id="@+id/profile_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/card_tag_background"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="확인"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>