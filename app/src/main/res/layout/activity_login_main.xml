<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.login.LoginMainActivity"
    android:background="@color/background_grey_100">


    <ImageView
        android:id="@+id/LoginPage_imageView_3People"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/handsup_3people"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="69dp"
        android:paddingBottom="69dp"/>

    <LinearLayout
        android:id="@+id/LoginPage_linearLayout_Email_and_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginPage_imageView_3People">

<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:id="@+id/LoginPage_TextInputLayout_Email"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->
<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/LoginPage_TextInputEditText_Email"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="개인 학교 이메일 주소"-->
<!--                android:drawableEnd="@drawable/ic_baseline_error_outline_24"/>-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <EditText
            android:id="@+id/LoginPage_EditText_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edit_text_background"
            android:hint="개인 학교 이메일 주소"
            android:padding="16dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/grey_600"
            android:textColorHint="@color/grey_500"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/LoginPage_TextInputLayout_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            android:layout_marginBottom="30dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/LoginPage_TextInputEditText_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:background="@drawable/login_edit_text_background"
                android:padding="16dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/grey_600"
                android:textColorHint="@color/grey_500"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--        <EditText-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/login_edit_text_background"-->
<!--            android:hint="비밀번호"-->
<!--            android:padding="16dp"-->
<!--            android:singleLine="true"-->
<!--            android:textSize="16sp"-->
<!--            android:textColor="@color/grey_500"-->
<!--            android:textColorHint="@color/grey_500"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LoginPage_linearLayout_Search_and_SignUp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginPage_linearLayout_Email_and_Password">

        <TextView
            android:id="@+id/LoginPage_TextView_SearchEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="아이디 찾기"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="|"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LoginPage_TextView_ChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="비밀번호 찾기"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="|"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/LoginPage_TextView_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="회원가입"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LoginPage_button_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_margin="16dp"
        android:text="로그인"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/disable_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>