<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".src.main.mainHome.ProfileChangeActivity">
    <LinearLayout
        android:id="@+id/profile_top_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:src="@drawable/arrow_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내정보변경"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="20sp" />

        <TextView
            android:textAlignment="viewEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textFontWeight="600"
            android:lineHeight="18.7dp"
            android:textColor="#111"
            android:text="확인"/>

    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/profile_top_wrapper"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="58dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="#747474"
            android:textSize="16sp"
            android:lineHeight="18.7dp"
            android:textFontWeight="400"/>
        <EditText
            android:layout_marginTop="12dp"
            android:privateImeOptions="defaultInput-mode=korean"
            android:textCursorDrawable="@color/black"
            android:backgroundTint="#111"
            android:textSize="20sp"
            android:textFontWeight="600"
            android:lineHeight="23.4dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="12dp"
            android:text="2글자 이상 5글자 이하로 변경가능해요!\n닉네임은 변경후 7일후 다시 바꿀수 있으니 신중히 바꿔주세요"
            android:textSize="12sp"
            android:textFontWeight="600"
            android:lineHeight="14dp"
            android:textColor="#747474"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>